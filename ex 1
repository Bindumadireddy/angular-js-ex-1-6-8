<div  id="content" style="text-align:center" >
  <h1>
    My Account
  </h1>
  <h2>${{num}}</h2>
   
  <button (click)="mybutton($event)" disabled={{dis}} id="button">Withdraw $10</button>&nbsp; &nbsp; <button (click)="Mybutton($event)" id="buttonn">Deposit $10</button>
  

</div>

//CSS

